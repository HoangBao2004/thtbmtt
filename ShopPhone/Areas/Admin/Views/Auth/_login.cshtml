@{
    var isLocked = ViewBag.LockedAccount != null && ViewBag.LockedAccount == true;
}

@if (TempData["logoutMessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["logoutMessage"]
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link href="~/public/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/public/css/style.css" rel="stylesheet" />
</head>
<body class="bg-login-admin">
    <section class="pt-5">
        <div class="container pt-5 ">
            <div class="row justify-content-center">
                <div class="col-md-6 bg-white p-5">
                    <h3 class="text-center font-weight-bold text-cam">Đăng Nhập</h3>
                    <form action="" method="post" name="from_login">
                        @if (!isLocked)
                        {
                            <!-- Đăng nhập bình thường -->
                            <label for="username"><b class="text-secondary">Tên Đăng Nhập</b></label>
                            <input type="text" placeholder="Username" name="username" required>

                            <label for="password"><b class="text-secondary">Mật Khẩu</b></label>
                            <input type="password" placeholder="Password" name="password" required>

                            <button type="submit" class="bg-success btn-button w-100">Đăng Nhập</button>
                        }
                        else
                        {
                            <!-- Tài khoản bị khóa, yêu cầu OTP -->
                            <label for="otp"><b class="text-secondary">Nhập mã OTP</b></label>
                            <input type="text" name="otp" id="otp" placeholder="Mã OTP từ email" required />

                            <button type="submit" class="bg-primary btn-button w-100 mt-3">Xác thực OTP</button>
                        }
                        <span class="text-cam">@ViewBag.error</span>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
